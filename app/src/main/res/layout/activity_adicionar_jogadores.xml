<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionarJogadoresActivity">

    <EditText
        android:id="@+id/add_jogador_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Nome"
        android:importantForAutofill="yes"
        android:inputType="textCapSentences" />

    <ListView
        android:id="@+id/add_list_jogadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_jogador_nome"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/add_jogador_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Adicionar" />

    <Button
        android:id="@+id/add_voltar_tela"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="voltar" />
</RelativeLayout>